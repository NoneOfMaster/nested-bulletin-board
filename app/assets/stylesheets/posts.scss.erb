.posts {
  padding-left: 25px; 
}

.post {
  margin: 20px 0;
}

.post-info {
  margin: 3px 0 5px 0;
}

.user-photo{
  display: inline-block;
  background-image: url(<%= asset_path('person-icon.png') %>);
  height: 30px;
  width: 30px;
  margin-right: 5px;
  border-style: solid;
  border-color: rgb(158, 158, 158);
  border-width: 1px;
}

.byline {
  display: inline-block;
  vertical-align: top;
  color: rgb(244, 67, 54);
  font-size: 18px;
  font-style: italic;
}

.post-author {
  display: inline-block;
  color: rgb(244, 67, 54);
  font-size: 18px;
  font-style: italic;
  margin-right: 5px;
}

.post-date {
  display: inline-block;
  color: rgb(158, 158, 158);
  font-size: 12px;
  font-style: italic;
}

.post-content {
  margin: 5px 0;
}

.postReply-form{
  margin: 5px 0;
}

.signin {
  color: blue;
  font-size: 8px;
  font-style: italic;
}

/* discussion posts */

div.top-level-post > div.post-content > div.text {
  font-size: 26px;
}

.topics-button-set {
  margin: 0 0 25px;
}

/**/

.newPost-form {
  margin: 10px 0 25px;
}